<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="gerson">
        <sql>
            CREATE TABLE users (
                id BIGSERIAL PRIMARY KEY,
                email VARCHAR(150) UNIQUE,
                name VARCHAR(100) NOT NULL,
                contact_name VARCHAR(150) NOT NULL,
                password VARCHAR(255),
                role SMALLINT,
                phone VARCHAR(50) NOT NULL,
                is_active BOOLEAN DEFAULT FALSE,
                creation_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
                created_by VARCHAR(100),
                modification_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
                modified_by VARCHAR(100)
            );
        </sql>
    </changeSet>

    <changeSet id="2" author="gerson">
        <sql>
            CREATE TABLE products (
                id BIGSERIAL PRIMARY KEY,
                name VARCHAR(120) NOT NULL,
                description VARCHAR(240) NOT NULL,
                uom_base VARCHAR(2),
                uom_buy VARCHAR(5),
                conversion_base_to_buy DOUBLE PRECISION,
                current_stock INTEGER NOT NULL DEFAULT 0,
                min_stock INTEGER NOT NULL DEFAULT 0,
                max_stock INTEGER,
                stock_alert INTEGER NOT NULL DEFAULT 0,
                is_active BOOLEAN DEFAULT FALSE,
                creation_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
                created_by VARCHAR(100),
                modification_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
                modified_by VARCHAR(100)
            );
        </sql>
    </changeSet>
    <changeSet id="3" author="gerson">
        <addColumn tableName="users">
            <column name="enabled" type="BOOLEAN" defaultValueBoolean="false" />
        </addColumn>
    </changeSet>
    <changeSet id="4" author="gerson">
        <dropColumn tableName="users" columnName="is_active" />
    </changeSet>

    <changeSet id="5" author="gerson">
        <createTable tableName="categories">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="creation_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(100)"/>
            <column name="modification_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="modified_by" type="VARCHAR(100)"/>
        </createTable>
    </changeSet>

    <changeSet id="6" author="gerson">
        <addColumn tableName="products">
            <column name="category_id" type="BIGINT" />
        </addColumn>
        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="products"
                                 constraintName="fk_product_category"
                                 referencedColumnNames="id"
                                 referencedTableName="categories"/>
    </changeSet>
</databaseChangeLog>